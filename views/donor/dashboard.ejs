<%- include('../partials/header') %>

<div class="card">
  <h2>Donor Dashboard</h2>
  <p>Welcome, <%= user.name %>!</p>
  <p>Blood Type: <%= user.bloodType %></p>
  
  <div class="btn-group">
    <a href="/donor/donate" class="btn">Donate Blood</a>
    <a href="/donor/history" class="btn btn-secondary">View History</a>
  </div>
</div>

<div class="card">
  <h3>Recent Donations</h3>
  <% if(donations.length > 0) { %>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Units</th>
          <th>Status</th>
          <th>Notes</th>
        </tr>
      </thead>
      <tbody>
        <% donations.slice(0, 5).forEach(donation => { %>
          <tr>
            <td><%= new Date(donation.donationDate).toLocaleDateString() %></td>
            <td><%= donation.units %></td>
            <td><%= donation.status %></td>
            <td><%= donation.notes %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No donations found. <a href="/donor/donate">Make your first donation!</a></p>
  <% } %>
</div>

<%- include('../partials/footer') %>