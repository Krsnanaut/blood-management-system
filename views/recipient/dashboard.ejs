<%- include('../partials/header') %>

<div class="card">
  <h2>Recipient Dashboard</h2>
  <p>Welcome, <%= user.name %>!</p>
  <p>Blood Type: <%= user.bloodType %></p>
  
  <div class="btn-group">
    <a href="/recipient/request" class="btn">Request Blood</a>
    <a href="/recipient/history" class="btn btn-secondary">View History</a>
  </div>
</div>

<div class="card">
  <h3>Recent Blood Requests</h3>
  <% if(requests.length > 0) { %>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Blood Type</th>
          <th>Units</th>
          <th>Urgency</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% requests.slice(0, 5).forEach(request => { %>
          <tr>
            <td><%= new Date(request.requestDate).toLocaleDateString() %></td>
            <td><%= request.bloodType %></td>
            <td><%= request.units %></td>
            <td><%= request.urgency %></td>
            <td><%= request.status %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No requests found. <a href="/recipient/request">Make your first request!</a></p>
  <% } %>
</div>

<%- include('../partials/footer') %>

