
<%- include('../partials/header') %>

<div class="card">
  <h2>Request History</h2>
  <p>View all your previous blood requests.</p>
  
  <% if(requests.length > 0) { %>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Blood Type</th>
          <th>Units</th>
          <th>Urgency</th>
          <th>Status</th>
          <th>Notes</th>
        </tr>
      </thead>
      <tbody>
        <% requests.forEach(request => { %>
          <tr>
            <td><%= new Date(request.requestDate).toLocaleDateString() %></td>
            <td><%= request.bloodType %></td>
            <td><%= request.units %></td>
            <td><%= request.urgency %></td>
            <td><%= request.status %></td>
            <td><%= request.notes %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No requests found. <a href="/recipient/request">Make your first request!</a></p>
  <% } %>
</div>

<%- include('../partials/footer') %>